@model TGProyectoG.Data.Carrera

@{
    ViewBag.Title = "Modificar";
}

<h2>Modificar</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Carrera</legend>

        @Html.HiddenFor(model => model.IdCarrera)

        <div class="editor-label">
            @Html.LabelFor(model => model.NombreCarrera)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NombreCarrera)
            @Html.ValidationMessageFor(model => model.NombreCarrera)
        </div>

        <p>
            <input type="submit" value="Guardar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver Atras", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
